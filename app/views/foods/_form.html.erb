      <ul>
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :properties %><br>
    <%= f.text_area :properties %>
  </div>
  <div class="field">
    
    <table>
    <tr>
    <% @components_all.keys.each do |component_type_name| %>
    
    <th>
    <%= f.label component_type_name %><br>
    </th>

    <% end %>
    </tr>
    <% @components_all.keys.each do |component_type_name| %>
      <tr>
      <% @components_all[component_type_name].each do |component| %>
    
      <td>
      <%= 
        check_box_tag component.name, 'yes', 
            (@components_marked.include? component)
      %>
      <%= component.name %>
    </td>
      
      
      <% end %>
      </tr>  
    <% end %>
  </table>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
