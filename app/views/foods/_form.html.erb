  <div class="field">
    <%= f.label :carbs %><br>
    <%= f.check_box :carbs%>
  </div>
  <div class="field">
    <%= f.label :fats %><br>
    <%= f.check_box :fats%>
  </div>
  <div class="field">
    <%= f.label :minerals %><br>
    <%= f.check_box :minerals%>
  </div>
  <div class="field">
    <%= f.label :proteins %><br>
    <%= f.check_box :proteins%>
  </div>
