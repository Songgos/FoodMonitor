<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Properties</th>
      <th>Vitamins</th>
      <th>Carbs</th>
      <th>Fats</th>
      <th>Minerals</th>
      <th>Proteins</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.description %></td>
        <td><%= food.properties %></td>
        <td><%= food.vitamins %></td>
        <td><%= food.carbs %></td>
        <td><%= food.fats %></td>
        <td><%= food.minerals %></td>
        <td><%= food.proteins %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

